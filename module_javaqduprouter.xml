<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javaqduprouter" default="compile.module.javaqduprouter">
  <dirname property="module.javaqduprouter.basedir" file="${ant.file.module_javaqduprouter}"/>
  
  <property name="module.jdk.home.javaqduprouter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javaqduprouter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javaqduprouter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javaqduprouter" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="javaqduprouter.output.dir" value="${module.javaqduprouter.basedir}/out/production/JavaQdUpRouter"/>
  <property name="javaqduprouter.testoutput.dir" value="${module.javaqduprouter.basedir}/out/test/JavaQdUpRouter"/>
  
  <path id="javaqduprouter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javaqduprouter.module.production.classpath">
    <path refid="${module.jdk.classpath.javaqduprouter}"/>
  </path>
  
  <path id="javaqduprouter.runtime.production.module.classpath">
    <pathelement location="${javaqduprouter.output.dir}"/>
  </path>
  
  <path id="javaqduprouter.module.classpath">
    <path refid="${module.jdk.classpath.javaqduprouter}"/>
    <pathelement location="${javaqduprouter.output.dir}"/>
  </path>
  
  <path id="javaqduprouter.runtime.module.classpath">
    <pathelement location="${javaqduprouter.testoutput.dir}"/>
    <pathelement location="${javaqduprouter.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.javaqduprouter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javaqduprouter">
    <patternset refid="excluded.from.module.javaqduprouter"/>
  </patternset>
  
  <path id="javaqduprouter.module.sourcepath">
    <dirset dir="${module.javaqduprouter.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javaqduprouter" depends="compile.module.javaqduprouter.production,compile.module.javaqduprouter.tests" description="Compile module JavaQdUpRouter"/>
  
  <target name="compile.module.javaqduprouter.production" description="Compile module JavaQdUpRouter; production classes">
    <mkdir dir="${javaqduprouter.output.dir}"/>
    <javac destdir="${javaqduprouter.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javaqduprouter}/javac">
      <compilerarg line="${compiler.args.javaqduprouter}"/>
      <bootclasspath refid="javaqduprouter.module.bootclasspath"/>
      <classpath refid="javaqduprouter.module.production.classpath"/>
      <src refid="javaqduprouter.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javaqduprouter"/>
    </javac>
    
    <copy todir="${javaqduprouter.output.dir}">
      <fileset dir="${module.javaqduprouter.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javaqduprouter.tests" depends="compile.module.javaqduprouter.production" description="compile module JavaQdUpRouter; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javaqduprouter" description="cleanup module">
    <delete dir="${javaqduprouter.output.dir}"/>
    <delete dir="${javaqduprouter.testoutput.dir}"/>
  </target>
</project>